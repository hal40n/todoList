# Dockerfile.backend
FROM php:8.1-fpm-alpine

COPY --from=composer:2.3 /usr/bin/composer /usr/bin/composer

RUN apk add --no-cache \
    git \
    bash \
    icu-dev \
    libzip-dev \
    oniguruma-dev \
    zip \
    unzip \
    mysql-client \
    mariadb-connector-c-dev \
    && docker-php-ext-install pdo_mysql

WORKDIR /var/www/backend

CMD ["php-fpm"]
